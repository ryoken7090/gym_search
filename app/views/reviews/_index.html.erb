<% if reviews.exists? %>
  <div class="p-3">
    <h3>■レビュー一覧</h3>
    <% reviews.each do |review| %>
      <div class="m-3 p-1 border">
        <h5><%= review.user.name %>さん</h5>
        <div class="py-1">
          フリーウエイト
          <div class="individual-rating">
            <div class="star-rating-front" style="width: <%= review.free_weight * 100/5 %>%">★★★★★</div>
            <div class="star-rating-back">★★★★★</div>
          </div>
        </div>
        <div class="py-1">
          マシンエリア
          <div class="individual-rating">
            <div class="star-rating-front" style="width: <%= review.machine * 100/5 %>%">★★★★★</div>
            <div class="star-rating-back">★★★★★</div>
          </div>
        </div>
        <div class="py-1">
          有酸素エリア
          <div class="individual-rating">
            <div class="star-rating-front" style="width: <%= review.caedio * 100/5 %>%">★★★★★</div>
            <div class="star-rating-back">★★★★★</div>
          </div>
        </div>
        <% if review.content.present?%>
          <div class="p-2">
            <p>コメント</p>
            <div>
              <%= review.content %>
            </div>
          </div>
        <% end %>
        <p class="px-1 text-muted"><%= review.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
      </div>
    <% end %>
  </div>
<% end %>
<%= render 'layouts/flash' %>
