<div class="row mx-2">
  <% facilities.each do |facility| %>
    <div class="col-lg-6">
      <div class="card m-2">
        <div class="mb-2">
          <h3 class="text-center">
            <%= link_to facility.name, facility_path(facility.id), class:"link" %>
          </h3>
          <div class="text-center">
            <span class="text-muted" style="border-bottom: solid 1px;"><%= facility.city.name %></span>
          </div>
        </div>
        <div class="row">
          <div class="col-4 text-center p-2">
            <div>
              フリーウェイト
            </div>
            <div>
              <span class="fa fa-star result-star"></span>
              <span class="result-num"><%= facility.avg_score(:free_weight) %></span>
            </div>
          </div>
          <div class="col-4 text-center p-2">
            <div>
              マシン
            </div>
            <div>
              <span class="fa fa-star result-star"></span>
              <span class="result-num"><%= facility.avg_score(:machine) %></span>
            </div>
          </div>
          <div class="col-4 text-center p-2">
            <div>
              有酸素
            </div>
            <div>
              <span class="fa fa-star result-star"></span>
              <span class="result-num"><%= facility.avg_score(:caedio) %></span>
            </div>
          </div>
          <div class="col-4 text-center p-2">
            <div>
              ビジター利用
            </div>
            <div>
              <span class="result-symbol"><%= facility.visiter_symbol %></span>
            </div>
          </div>
          <div class="col-4 text-center p-2">
            <div>
              駅チカ
            </div>
            <div>
              <span class="result-symbol"><%= facility.accessible_ten_min_symbol %></span>
            </div>
          </div>
          <div class="col-4 text-center p-2">
            <div>
              24H営業
            </div>
            <div>
              <span class="result-symbol"><%= facility.open_all_time_symbol %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<% if action_name == "search" %>
  <%= paginate @facilities %>
<% end %>
